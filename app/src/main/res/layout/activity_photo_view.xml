<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/photo_view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".photo.PhotoViewActivity">
    <ImageView
            android:id="@+id/photo_view_btn_close"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/colorWhite"
            android:elevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="16dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    <com.github.chrisbanes.photoview.PhotoView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_view_btn_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            tools:src="@drawable/category_pattern"
            android:id="@+id/photo_view_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>