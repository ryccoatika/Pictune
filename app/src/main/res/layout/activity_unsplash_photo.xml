<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".photo.UnsplashPhotoActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/unsplash_photo_app_bar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/unsplash_photo_toolbar"
                        app:title=""
                        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
                        style="@style/Widget.MaterialComponents.Toolbar.PrimarySurface"
                        app:menu="@menu/unsplash_photo_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.appbar.AppBarLayout>
            <ImageView
                    android:id="@+id/unsplash_photo_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/unsplash_photo_app_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="#eeeeee"
                    android:src="@drawable/ic_broken_image_black_24dp"
                    android:tint="#dddddd"
                    android:maxHeight="400dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/unsplash_photo_user_image"
                    app:layout_constraintTop_toBottomOf="@id/unsplash_photo_image"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="8dp"
                    tools:src="@color/colorPrimary"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            <com.google.android.material.textview.MaterialTextView
                    app:layout_constraintStart_toEndOf="@id/unsplash_photo_user_image"
                    app:layout_constraintTop_toTopOf="@id/unsplash_photo_user_image"
                    app:layout_constraintBottom_toBottomOf="@id/unsplash_photo_user_image"
                    app:layout_constraintEnd_toStartOf="@id/unsplash_photo_btn_download"
                    android:maxLines="2"
                    android:layout_margin="16dp"
                    android:id="@+id/unsplash_photo_tv_name"
                    android:textSize="20sp"
                    tools:text="Rycco Atika"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/unsplash_photo_btn_download"
                    app:layout_constraintTop_toTopOf="@id/unsplash_photo_user_image"
                    app:layout_constraintBottom_toBottomOf="@id/unsplash_photo_user_image"
                    app:layout_constraintEnd_toStartOf="@id/unsplash_photo_btn_set_as"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_file_download_black_24dp"
                    android:tint="@color/colorText"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            <ImageView
                    android:id="@+id/unsplash_photo_btn_set_as"
                    android:src="@drawable/ic_wallpaper_black_24dp"
                    android:tint="@color/colorText"
                    app:layout_constraintEnd_toStartOf="@id/unsplash_photo_btn_favorite"
                    app:layout_constraintTop_toTopOf="@id/unsplash_photo_user_image"
                    app:layout_constraintBottom_toBottomOf="@id/unsplash_photo_user_image"
                    android:layout_margin="8dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            <ImageView
                    android:contentDescription="@string/text_favorite"
                    android:id="@+id/unsplash_photo_btn_favorite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/unsplash_photo_user_image"
                    app:layout_constraintBottom_toBottomOf="@id/unsplash_photo_user_image"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            <View
                    android:id="@+id/unsplash_photo_divider1"
                    app:layout_constraintTop_toBottomOf="@id/unsplash_photo_user_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            <LinearLayout
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/unsplash_photo_divider1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/unsplash_photo_tv_description"
                        tools:text="Description"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_date_black_24dp"
                            android:tint="@color/colorText"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                    <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/unsplash_photo_tv_date_created"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp"
                            android:textColor="@color/colorText"
                            tools:text="2020-05-05"
                            android:layout_marginStart="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_eye_black_24dp"
                            android:tint="@color/colorText"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                    <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/unsplash_photo_tv_views"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp"
                            android:textColor="@color/colorText"
                            tools:text="@string/text_views"
                            android:layout_marginStart="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_file_download_black_24dp"
                            android:tint="@color/colorText"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                    <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/unsplash_photo_tv_download"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp"
                            android:textColor="@color/colorText"
                            tools:text="@string/text_downloads"
                            android:layout_marginStart="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_favorite_black_24dp"
                            android:tint="@color/colorText"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                    <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/unsplash_photo_tv_likes"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp"
                            android:textColor="@color/colorText"
                            tools:text="@string/text_likes"
                            android:layout_marginStart="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>