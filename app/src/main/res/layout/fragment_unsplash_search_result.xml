<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".search.activity.UnsplashSearchResultFragment">
    <ProgressBar
            android:id="@+id/unsplash_search_result_pb"
            android:elevation="8dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/unsplash_search_result_tv_warning"
            android:layout_centerInParent="true"
            tools:text="No result found"
            android:textSize="18sp"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/unsplash_search_result_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</RelativeLayout>