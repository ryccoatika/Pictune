<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
            app:iconSpaceReserved="false"
            app:title="@string/general">
        <Preference
                app:iconSpaceReserved="false"
                app:key="@string/key_auto_wallpaper"
                app:title="@string/auto_wallpaper" />
        <ListPreference
                app:title="@string/theme"
                app:key="@string/key_theme"
                app:entries="@array/theme_entries"
                app:entryValues="@array/theme_values"
                app:defaultValue="@string/default_theme_value"
                app:allowDividerAbove="true"
                app:iconSpaceReserved="false" />
        <Preference
                app:iconSpaceReserved="false"
                app:allowDividerAbove="true"
                app:key="@string/key_clear_cache"
                app:title="@string/clear_cache" />
    </PreferenceCategory>
    <PreferenceCategory
            app:iconSpaceReserved="false"
            app:title="@string/support_development">
        <Preference
                app:iconSpaceReserved="false"
                app:title="@string/rate_this_app"
                app:key="@string/key_rate_app"
                app:summary="@string/rate_app_summary" />
        <Preference
                app:iconSpaceReserved="false"
                app:allowDividerAbove="true"
                app:title="@string/report_bugs"
                app:key="@string/key_report_bugs"
                app:summary="@string/report_bugs_summary" />
    </PreferenceCategory>
    <PreferenceCategory
            app:iconSpaceReserved="false"
            app:title="@string/about">
        <Preference
                app:iconSpaceReserved="false"
                app:title="@string/author"
                app:summary="@string/author_summary"
                app:key="@string/key_author" />
        <Preference
                app:iconSpaceReserved="false"
                app:allowDividerAbove="true"
                app:title="@string/powered_by_unsplash"
                app:summary="@string/powered_by_summary"
                app:key="@string/key_unsplash_page" />
        <Preference
                app:iconSpaceReserved="false"
                app:allowDividerAbove="true"
                app:key="@string/key_github_page"
                app:summary="@string/github_summary"
                app:title="@string/github" />
        <Preference
                app:iconSpaceReserved="false"
                app:allowDividerAbove="true"
                app:key="@string/key_licenses"
                app:title="@string/licenses" />
        <Preference
                app:iconSpaceReserved="false"
                app:allowDividerAbove="true"
                app:summary="1.0.0"
                app:key="@string/key_app_version"
                app:title="@string/app_version" />
    </PreferenceCategory>
</PreferenceScreen>